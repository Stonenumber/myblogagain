<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stone.blog.dao.TagMapper">
    <resultMap id="tag" type="com.stone.blog.po.Tag">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="com.stone.blog.po.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>

    </resultMap>

    <insert id="saveTag" parameterType="com.stone.blog.po.Tag" useGeneratedKeys="true" keyProperty="id">
        insert into t_tag (id, name) values (#{id}, #{name})
    </insert>

    <select id="getTag" resultMap="tag">
        select * from t_tag  where id = #{id}
    </select>

    <select id="getTagByName" resultMap="tag">
        select * from t_tag where name = #{name}
    </select>

    <select id="getAllTag" resultMap="tag">
        select * from t_tag
    </select>

    <select id="getBlogTag" resultMap="tag">
        select t.id, t.name, b.id bid, b.title
        from t_tag t, t_blog b, t_blog_tags bt
        where t.id = bt.tags_id and b.id = bt.blogs_id
    </select>

    <update id="updateTag" parameterType="com.stone.blog.po.Tag">
        update t_tag set name = #{name} where id = #{id}
    </update>

    <delete id="deleteTag">
        delete from t_tag where id = #{id}
    </delete>


</mapper>