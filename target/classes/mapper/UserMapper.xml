<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stone.blog.dao.UserMapper">
    <resultMap id="user" type="com.stone.blog.po.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="avatar" column="avatar"/>
        <result property="nickname" column="nickname"/>
        <result property="type" column="type"/>
    </resultMap>

    <select id="queryByUsernameAndPassword" resultMap="user">
        select id, username, avatar, nickname from t_user where username= #{username} and password= #{password}
    </select>

</mapper>