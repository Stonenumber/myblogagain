<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stone.blog.dao.CommentMapper">
    <resultMap id="comment" type="com.stone.blog.po.Comment">
        <id property="id" column="id"/>
        <result property="avatar" column="avatar"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>
        <result property="content" column="content"/>

        <result property="createTime" column="create_time"/>
        <result property="adminComment" column="admin_comment"/>
        <result property="blogId" column="blog_id"/>
        <result property="parentCommentId" column="parent_comment_id"/>
    </resultMap>

    <select id="findByBlogId" resultMap="comment">
        select * from t_comment where blog_id = #{blogId} and parent_comment_id = -1 order by create_time desc
    </select>

    <select id="findByParentCommentId" resultMap="comment">
        select * from t_comment where parent_comment_id = #{parentCommentId}
    </select>

    <insert id="saveComment" useGeneratedKeys="true" keyProperty="id">
        insert into t_comment (avatar, nickname, email, content, create_time, admin_comment, blog_id, parent_comment_id)
        values (#{avatar}, #{nickname}, #{email}, #{content}, #{createTime}, #{adminComment}, #{blogId}, #{parentCommentId})
    </insert>

    <select id="listComments" resultMap="comment">
        select * from t_comment order by create_time desc
    </select>

    <delete id="deleteByCommentId">
        delete from t_comment where id = #{id}
    </delete>

    <select id="findByCommentId" resultMap="comment">
        select * from t_comment where id = #{id}
    </select>

</mapper>