<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stone.blog.dao.TypeMapper">
    <select id="getType" resultType="com.stone.blog.po.Type">
        select id,name from blog.t_type where id = #{id}
    </select>

    <insert id="saveType" parameterType="com.stone.blog.po.Type" useGeneratedKeys="true" keyProperty="id">
        insert into t_type values (#{name});
    </insert>

    <!--两个id可能会相冲，取别名即可-->
    <resultMap id="type" type="com.stone.blog.po.Type">
      <id property="id" column="tid"/>
      <result property="name" column="name"/>
      <collection property="blogs" ofType="com.stone.blog.po.Blog">
        <id property="id" column="bid"/>
        <result property="title" column="title"/>
        <result property="typeId" column="type_id"/>
      </collection>
    </resultMap>

    <select id="getBlogType" resultMap="type">
        select t.id tid, t.name, b.id bid, b.title, b.type_id
        from t_type t, t_blog b
        where t.id = b.type_id
    </select>


    <select id="getAllType" resultType="com.stone.blog.po.Type">
        select * from t_type
    </select>

    <select id="getTypeByName" resultType="com.stone.blog.po.Type">
        select * from blog.t_type where name = #{name}
    </select>

    <delete id="deleteType" >
        delete from blog.t_type where id = #{id}
    </delete>

    <update id="updateType" parameterType="com.stone.blog.po.Type">
        update blog.t_type set name = #{name} where id = #{id};
    </update>




</mapper>